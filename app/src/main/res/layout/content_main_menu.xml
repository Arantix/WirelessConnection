<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main_menu" tools:context=".MainMenu">

        <TextView android:text="Wireless Connection" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_name"
            android:layout_marginTop="119dp"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="#0033ff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Explorer"
            android:id="@+id/button_explorer"
            android:layout_marginTop="75dp"
            android:width="200dp"
            android:height="50dp"
            android:layout_below="@+id/app_name"
            android:layout_centerHorizontal="true"
            android:nestedScrollingEnabled="false"
            android:onClick="explorerClick"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Start_server"
            android:id="@+id/button_server"
            android:layout_marginTop="49dp"
            android:width="200dp"
            android:height="50dp"
            android:layout_below="@+id/button_explorer"
            android:layout_alignLeft="@+id/button_explorer"
            android:layout_alignStart="@+id/button_explorer"
            android:onClick="serverClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textIP"
        android:text="000.000.000.000"
        android:textColor="#000000"
        android:layout_below="@+id/button_server"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your IP"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textIP" />

</RelativeLayout>
